{
    "manifest_version": 2,

        "name": "background Collector",
        "description": "This extension demonstrates a browser action with kittens.",
        "version": "1.0",
        "permissions": [
            "*://*/*",
            "tabs",
            "storage"
            ],
        
        "content_scripts": [
        {
            "matches": [ "*://*.youtube.com/*"],
            "js": ["d3.v3.js", "nv.d3.js", "jquery-1.11.0.js" , "content.js"],
            "css": ["chart.css"]
        }],
        

        "browser_action": {
            "default_icon": "icon.png",
            "default_popup": "popup.html"
        }
}

