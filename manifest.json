{
    "manifest_version": 2,

    "name": "Social Traces",
    "description": "Research Project from Cornell-Tech, Cornell University",
    "version": "4.3",
    "permissions": [
        "*://youtube.com/*",
        "<all_urls>",
        "*://ec2-174-129-119-33.compute-1.amazonaws.com/*",
        "tabs",
        "storage",
        "notifications"
    ],

    "content_scripts": [
        {
            "matches": [ "*://*.youtube.com/*"],
            "js": ["d3.v3.js", "nv.d3.js", "jquery-1.11.0.js" , "content.js", "tools.js", "highcharts.js", "config.js"],
            "css": ["chart.css"]
        }
    ],

    "content_security_policy": "img-src 'self' http://example.com/; object-src 'self'; script-src 'self'",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js", "jquery-1.11.0.js", "config.js"
        ]

    }
}

